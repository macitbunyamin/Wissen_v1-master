@model IEnumerable<Wissen.Model.Post>
@{
    ViewBag.Title = "Yazılar";
}

<h2>Yazılar</h2>
<a href="@Url.Action("Create")" class="btn btn-primary">Yeni Yazı</a>
<table class="table table-hover table-striped">
    <tr>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><a href="@Url.Action("Edit",new { id = item.Id })">@item.Title</a></td>
            <td>@item.Description</td>
            <td>@(item.Category?.Name)</td>
            <td>
                <a href="@Url.Action("Edit",new { id = item.Id })" class="btn btn-primary btn-sm">Düzenle</a>
                <a href="@Url.Action("Detay",new { id = item.Id })" class="btn btn-primary btn-sm">Ayrıntılar</a>
                <a href="@Url.Action("Delete",new { id = item.Id })" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>
    }
</table>